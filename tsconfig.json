{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "declaration": true,
        "module": "commonjs",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "target": "es6"
    },
    "include": [
        "./lib/**/*"
    ],
    "exclude": [
        "test/**/*",
        "node_modules",
        "build"
    ],
}